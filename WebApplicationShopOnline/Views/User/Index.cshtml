@model User
@{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card text-center">
                    <img src="images/startdevelopweb.png" class="card-img-top rounded-circle mx-auto d-block mt-3" alt="Profile Picture">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Name</h5>
                        <p class="card-text">Почта:@Model.Email</p>
                        <p class="card-text">Телефон:@Model.Phone</p>
                        <p class="card-text">Пароль:@Model.Password</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
