@model Cart

<div class="text-left">
    <h1 class="display-4">Корзина</h1>
    @if (Model == null || Model.Items.Count == 0)
    {
        <h3>У вас пока нет покупок</h3>
    }
    else
    {
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <td>Название</td>
                        <td>Цена руб</td>
                        <td>Количество</td>
                        <td>Стоимость руб</td>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var itemCart in Model.Items)
                    {
                        <tr>
                            <td>@itemCart.Product.Name</td>
                            <td>@itemCart.Product.Cost</td>
                            <td>@itemCart.Amount</td>
                            <td>@itemCart.Cost</td>
                            <td><a class="btn btn-dark" href="/cart/decreasecount?id=@itemCart.Product.Id">-</a></td>
                            <td><a class="btn btn-dark" href="/cart/increasecount?id=@itemCart.Product.Id">+</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center">
                <h3>Итого: @Model.Cost руб</h3>
            </div>
            <div class="text-center">
                <a class="btn btn-dark" href="/product/catalog">Продолжить покупки</a>
            </div>
        </div>
    }
</div>
