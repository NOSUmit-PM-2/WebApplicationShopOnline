@model User

<div class="row">
    <div class="card mb-3" style="max-width: 700px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="https://sun9-46.userapi.com/impg/0mfknkpwI0cUOrC4Vhmn0fOVdLg5-PaneGADsg/eWFfp6Wt2-c.jpg?size=850x850&quality=96&sign=9ed255a7d082380cb99327466518706b&type=album" class="card-img" width="250" alt="Котик в коробке">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Карточка пользователя</h5>
                    <p class="card-title">Имя: @Model.Name</p>
                    <p class="card-text">Логин: @Model.Login</p>
                    <p class="card-text">Пароль: @Model.Password</p>
                    <p class="card-text">Телефон: @Model.Telephone</p>
                    <p class="card-text">Почта: @Model.Email</p>
                </div>
            </div>
        </div>
    </div>
</div>
