@model User

<div class="row">
    <div class="card mb-3" style="max-width: 700px;">
        <div class="row no-gutters">
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Карточка пользователя</h5>
                    <p class="card-title">Name: @Model.Name</p>
                    <p class="card-text">Telephone: @Model.Telephone</p>
                    <p class="card-text">Email: @Model.Email</p>
                    <p class="card-text">Login: @Model.Login</p>
                    <p class="card-text">Password: @Model.Password</p>
                </div>
            </div>
        </div>
    </div>
</div>
