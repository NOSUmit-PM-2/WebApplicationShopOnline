@model IEnumerable<WebApplicationShopOnline.Models.User>
@model User

@{
    ViewData["Title"] = "Список пользователей";
}

<div class="container mt-4">
    <h2>Список пользователей</h2>

    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" action="@Url.Action("Index", "User")" class="form-inline">
                <div class="input-group">
                    <input type="text" name="searchName" class="form-control" placeholder="Поиск по имени...">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Поиск</button>
                    </div>
<div class="row justify-content-center">
    <div class="card mb-3 shadow-lg" style="max-width: 540px; border-radius: 15px; background-color: #f8f9fa;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="https://cdn-icons-png.flaticon.com/512/1946/1946429.png" class="card-img" alt="User Image" style="border-top-left-radius: 15px; border-bottom-left-radius: 15px; object-fit: cover;">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title text-primary font-weight-bold">Name: @Model.Name</h5>
                    <p class="card-text"><strong>Login:</strong> @Model.Login</p>
                    <p class="card-text"><strong>Password:</strong> @Model.Password</p>
                    <p class="card-text"><strong>Telephone:</strong> @Model.Phone</p>
                    <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                </div>
            </form>
            </div>
        </div>
    </div>
</div>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info">
            @ViewBag.Message
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Имя</th>
                        <th>Логин</th>
                        <th>Телефон</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.IdUser</td>
                            <td>@user.Name</td>
                            <td>@user.Login</td>
                            <td>@user.Telephone</td>
                            <td>@user.Email</td>
                            <td>
                                <a asp-action="UserDetails" asp-route-id="@user.IdUser" class="btn btn-info btn-sm">
                                    Подробнее
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
@* красоты чуток захотелось *@
<style>
    .card {
        border: none;
        transition: transform 0.3s ease-in-out;
    }
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.1);
        }
    .card-body {
        padding: 20px;
    }
    .card-text {
        font-size: 14px;
        color: #555;
    }
    .text-primary {
        color: #007bff !important;
    }
    .text-muted {
        color: #6c757d !important;
    }
</div> 
</style>
