@model List<Product>

<div class="row">
     @foreach(var product in Model)
    {
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src=@product.PathImage class="card-img" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    
                    <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Id</p>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text"><small class="text-muted">@product.Cost р.</small></p>
                        <a class="btn btn-primary btn-lg active" 
                        asp-area=""
                        asp-controller="Product"
                        asp-action="Index" asp-route-id="@product.Id">              Подробнее</a>
                </div>
            </div>
        </div>
    </div>
    }
</div>

